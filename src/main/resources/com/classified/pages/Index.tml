<html t:type="layout" title="Welcome to bukdeal"
      t:sidebarTitle="Framework Version"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
      xmlns:p="tapestry:parameter">



    <t:form id="form">
        <t:textfield t:id="searchText"  validate="required" size="50"/>
        <t:submit t:id="submit" value="Search"/>

    </t:form>

    <t:grid source="deals" row="deal" add="imagePic" include="name,author" reorder="imagePic,name,author">
        <p:imagePicCell>
            <img src="${picUrl}"/>
        </p:imagePicCell>
        <p:empty>
          <p>No book found</p>
        </p:empty>
    </t:grid>


    <p:sidebar>
        <p>
            [
            <t:pagelink page="Index">refresh page</t:pagelink>
            ]
        </p>
    </p:sidebar>

</html>
